@inject HttpClient Http

<MudGrid>
    <!-- Список эндпоинтов -->
    <MudItem xs="2">
        <MudList T="int">
            <MudListItem OnClick="@(() => Refresh(0))">Get All Studios</MudListItem>
            <MudListItem OnClick="@(() => Refresh(1))">Get Studio By Id</MudListItem>
            <MudListItem OnClick="@(() => Refresh(2))">Update studio by id</MudListItem>
            <MudListItem OnClick="@(() => Refresh(3))">Delete studio by id</MudListItem>

        </MudList>
    </MudItem>

    <!-- Рабочая зона -->
    <MudItem xs="10">
        @if (SelectedEndpoint == 0)
        {
            <GetAllStudiosComponent />
        }
        else if (SelectedEndpoint == 1)
        {
            <GetStudioByIdComponent />
        }
        else if (SelectedEndpoint == 2)
        {
            <UpdateStudioByIdComponent />
        }
        else if (SelectedEndpoint == 3)
        {
            <DeleteStudioByIdComponent />
        }
    </MudItem>
</MudGrid>

@code {
    private int SelectedEndpoint { get; set; } = 0;

    private async void Refresh(int i)
    {
        SelectedEndpoint = i;
        StateHasChanged();
    }



}
