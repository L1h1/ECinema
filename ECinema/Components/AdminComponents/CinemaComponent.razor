@inject HttpClient Http
@rendermode InteractiveServer
<MudGrid>
    <!-- Список эндпоинтов -->
    <MudItem xs="2">
        <MudList T="int">
            <MudListItem OnClick="@(() => Refresh(0))">Get All Cinemas</MudListItem>
            <MudListItem OnClick="@(() => Refresh(1))">Get Cinema By Id</MudListItem>
            <MudListItem OnClick="@(() => Refresh(2))">Create Cinema</MudListItem>
            <MudListItem OnClick="@(() => Refresh(3))">Update Cinema Name</MudListItem>
            <MudListItem OnClick="@(() => Refresh(4))">Update Cinema Website</MudListItem>
            <MudListItem OnClick="@(() => Refresh(5))">Delete Cinema</MudListItem>
        </MudList>
    </MudItem>

    <!-- Рабочая зона -->
    <MudItem xs="10">
        @if (SelectedEndpoint == 0)
        {
            <GetAllCinemas />
        }
        else if (SelectedEndpoint == 1)
        {
            <GetCinemaById  />
        }
        else if (SelectedEndpoint == 2)
        {
            <CreateCinema  />
        }
        else if (SelectedEndpoint == 3)
        {
            <UpdateCinemaName  />
        }
        else if (SelectedEndpoint == 4)
        {
            <UpdateCinemaWebsite  />
        }
        else if (SelectedEndpoint == 5)
        {
            <DeleteCinema  />
        }
    </MudItem>
</MudGrid>

@code {
    private int SelectedEndpoint { get; set; } = 0;

    private async void Refresh(int i)
    {
        SelectedEndpoint = i;
        StateHasChanged();
    }



}
